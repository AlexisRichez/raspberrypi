[Unit]
Description=Radarr Daemon
After=syslog.target network.target
Requires=nzbget.service
StartLimitIntervalSec=0
 
[Service]
User=radarr
Group=radarr
 
Type=simple
 
ExecStart=/usr/bin/mono /opt/downloaders/radarr/Radarr.exe -nobrowser -data=/opt/downloaders.conf/radarr
TimeoutStopSec=20
KillMode=process
Restart=on-failure
RestartSec=5
 
[Install]
WantedBy=multi-user.target
Alias=radarr.service
